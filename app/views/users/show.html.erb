  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <%= render 'books/list', user: @user %>
    </div>
     <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </thead>
      <tbody>
       <% @books.each do |book| %>
       <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
        <td><%=link_to book.title ,book_path(id: current_user) %></td>
        <td><%= book.opinion %></td>
       </tr>
       <% end %>
      </tbody>
     </table>
    </div>
   </div>
  </div>
   </div>
  </div>
   
  