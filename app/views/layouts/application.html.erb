<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/c2d68e5f1e.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
       <%= link_to root_path,class: "navbar-brand" do %>
        <span>Bookers</span>
       <% end %>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls"navbarNavDropdown" aria-expand="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
       </button>
       <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
             <li class="nav-item-books">
              <li>
               <%= link_to user_path(current_user), class: "nav-link text-light" do %>
               <i class="fas fa-home"></i> Home
               <% end %>
              </li>
              <li>
              <%= link_to  users_path, class: "nav-link text-light" do %>
              <i class="fa-solid fa-users"></i> Users
              <% end %>
              </li>
              <li>
              <%= link_to books_path, class: "nav-link text-light" do %>
              <i class="fa-solid fa-book-open"></i> Books
              <% end %>
              </li>
            <li>
              <%= link_to  destroy_user_session_path, class: "nav-link text-light", method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"></i> Log out
              <% end %>
            </li>
           <% else %>
            <li>
              <%= link_to root_path, class: "nav-link text-light" do %>
              <i class="fas fa-home"></i> Home
              <% end %>
            </li>
             <li>
               <%= link_to homes_about_path, class: "nav-link text-light" do %>
               <i class="fas fa-link"></i> About
               <% end %>
            </li>
            <li>
               <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
               <i class="fas fa-user-plus"></i> Sign up
               <% end %>
            </li>
             <li>
               <%= link_to new_user_session_path, class: "nav-link text-light" do %>
               <i class="fas fa-sign-in-alt"></i> Log in
               <% end %>
            </li>
           <% end %>
         </ul>
        </div>
       </div>
    </nav>
   </header>
  <main></main>
  
    <%= yield %>
  </body>
  <footer>
    <div class="container mt-5">
     <div class="row">
      <div class="mx-auto">
        <p>CopyRigth Infratop.inc</p>
      </div>
     </div>
    </div>
  </footer>
</html>
