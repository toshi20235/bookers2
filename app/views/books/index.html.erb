<%= form_with model: Book.new do |f| %>
<h1>User info</h1>
   <% if book.image.attached? %>
    <%= image_tag book.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
<%= f.file_field :image, accept: "image/*" %>
<h1>New book</h1>
 <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
   <%= f.submit 'Create book' %>
<% end %> 