  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <%= render 'books/list', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
       <tbody>
        <% @books.each do |book| %>
         <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %> 
            </br> <%=link_to @user.name, user_path(id: current_user) %>
          </td>
          <td><%=link_to book.title ,user_path(id: current_user) %></td>
          <td><%= book.opinion %></td>
          <td><%= link_to "edit", edit_book_path,class: "btn btn-sm btn-success" %></td>
          <td> <% if @user == current_user %>
               <%= link_to "destroy", books_path(@book), method: :delete,class: "btn btn-sm btn-danger" %>
               <% end %>
         </td>
         </tr>
        <% end %>
       </tbody>
      </table>
     </div>
    </div>
  </div>
 </div>