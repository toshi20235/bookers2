<p id="notice"></p>
 <div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <%= form_with model: @book do |f| %>
        <label form="inputTitle">Title</label>
        <div class="form-group">
          <%= f.text_field :title,autofocus: true,id: "inputTitle", class: "form-control book_title" %>
        </div>
        <label form="inputTitle">Opinion</label>
        <div class="form-group">
          <%= f.text_field :opinion , class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit "Uptate Book",class: "btn btn-success" %>
        </div>
        <% end %>
        <%= link_to "show", book_path %>|
        <%= link_to "back", books_path %>
    </div>
  </div>
</div>