    <h1>User info</h1>
     <%= image_tag user.get_profile_image(100,100) %>
     <div class="row">
      <%= link_to "edit",edit_user_path(user.id),class: "btn btn-outline-secondary btn-block" %>
     </div>
     
    <h1>New book</h1>
    <%= form_with model: Book.new do |f| %>
     <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :opinion %>
       <%= f.submit 'Create book' %>
    <% end %> 
